{
  "services": [
    {
      "name": "messenger",
      "path": "server",
      "build": {
        "env": {
          "PYTHONUNBUFFERED": "1"
        }
      },
      "deploy": {
        "startCommand": "python server.py",
        "ports": [
          {
            "port": 8080,
            "protocol": "tcp"
          }
        ]
      }
    },
    {
      "name": "coturn",
      "path": "turn",
      "build": {
        "type": "docker", 
        "dockerfile": "turn/Dockerfile",
        "env": {
          "STATIC_AUTH_SECRET": "chaika_2025"
        }
      },
      "deploy": {
        "ports": [
          {
            "port": 3478,
            "protocol": "udp"
          },
          {
            "port": 3478,
            "protocol": "tcp"
          },
          {
            "port": 5349,
            "protocol": "tcp"
          }
        ]
      }
    }
  ]
}
